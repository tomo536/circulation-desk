<h1>Editing book</h1>

<% form_for(@book) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :publisher %><br />
    <%= f.text_field :publisher %>
  </p>
  <p>
    <%= f.label :pubdate %><br />
    <%= f.date_select :pubdate, :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price, :value => number_to_currency(f.object.price, :precision =>0, :format=>"%n"), :style => "text-align: right" %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
